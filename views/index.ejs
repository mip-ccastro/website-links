<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title><%= title %></title>
</head>
<body>
    <header>
        <h1><%= title %></h1>
    </header>
    <main>
        <ul>
            <% list.forEach((item) => { %>
                <li>
                    <div class="tooltip">
                        <a href=<%= item.url %> target="_blank"><%= item.title %></a>
                        <% if(show_desc){ %>
                            <% if(item.desc){ %>
                                <span class="tooltiptext"><%= item.desc %></span>
                            <% } else{ %>  
                                <span class="tooltiptext">No description provided.</span>
                            <% } %>
                        <% } %>
                    </div>
                </li>
            <% }); %>
        </ol>
    </main>
</body>
</html>